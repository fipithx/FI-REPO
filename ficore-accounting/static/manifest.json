{
    "name": "{{ trans('app_name', default='FiCore Accounting') }}",
    "short_name": "{{ trans('app_short_name', default='FiCore') }}",
    "description": "{{ trans('app_description', default='Manage your finances with ease') }}",
    "start_url": "/",
    "display": "standalone",
    "background_color": "#F2EFEA",
    "theme_color": "#0F3D57",
    "orientation": "portrait",
    "icons": [
        {
            "src": "{{ url_for('static', filename='img/icons/icon-192x192.png') }}",
            "sizes": "192x192",
            "type": "image/png"
        },
        {
            "src": "{{ url_for('static', filename='img/icons/icon-512x512.png') }}",
            "sizes": "512x512",
            "type": "image/png"
        }
    ],
    "lang": "{{ session.get('lang', 'en') }}",
    "dir": "{{ 'rtl' if session.get('lang', 'en') == 'ha' else 'ltr' }}"
}
